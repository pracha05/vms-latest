<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    android:orientation="vertical"
    tools:context=".activity.ContactDetailsInfo">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/colorPrimary"
        >

        <ImageView
            android:id="@+id/img_condetails_contact_back"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:background="@mipmap/back" />

        <TextView
            android:id="@+id/tv_condetails_contact_header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:textSize="@dimen/headertextsize"
            android:text="@string/contact_details"

            android:textColor="@color/colorWhite" />
        <ImageView
            android:id="@+id/img_threedot"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:background="@mipmap/ic_launcher_threedot" />

    </RelativeLayout>
<LinearLayout
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_margin="6dp"

    android:background="@drawable/boxborder_shape"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin5dp"
        android:layout_gravity="center"
        android:orientation="horizontal"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:padding="8dp"
        android:background="@color/colorWhite">


        <TextView
            android:id="@+id/tv_condetails_contact_company"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:background="@drawable/box_border_shape"
            android:ellipsize="end"
            android:text="@string/com_name"
            android:maxLines="1"

            android:singleLine="true"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/smalltextsize" />


        <TextView
            android:id="@+id/txt_condetails_contact_company"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:background="@drawable/box_border_shape"
            android:ellipsize="end"
            android:text="@string/sutherland"
            android:maxLines="1"

            android:singleLine="true"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/smalltextsize" />

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorLightGray"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal"
        android:weightSum="2"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"

        android:padding="8dp"
        android:background="@color/colorWhite">


        <TextView
            android:id="@+id/tv_condetails_contact_customer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:background="@drawable/box_border_shape"
            android:ellipsize="end"
            android:text="@string/name_of_the_customer"
            android:maxLines="1"

            android:singleLine="true"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/smalltextsize" />


        <TextView
            android:id="@+id/txt_condetails_contact_customer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:background="@drawable/box_border_shape"
            android:ellipsize="end"
            android:text="@string/sridhar"
            android:maxLines="1"

            android:singleLine="true"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/smalltextsize" />


    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorLightGray"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:weightSum="2"
        android:padding="8dp"
        android:background="@color/colorWhite">


        <TextView
            android:id="@+id/tv_condetails_contact_mobile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:background="@drawable/box_border_shape"
            android:ellipsize="end"
            android:text="@string/mobile_num"
            android:maxLines="1"

            android:singleLine="true"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/smalltextsize" />


        <TextView
            android:id="@+id/txt_condetails_contact_mobile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:background="@drawable/box_border_shape"
            android:ellipsize="end"
            android:text="7889789891"
            android:maxLength="10"
            android:inputType="number"
            android:maxLines="1"

            android:singleLine="true"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/smalltextsize" />

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorLightGray"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:weightSum="2"
        android:padding="8dp"
        android:background="@color/colorWhite">


        <TextView
            android:id="@+id/tv_condetails_contact_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:background="@drawable/box_border_shape"
            android:ellipsize="end"
            android:text="@string/email"
            android:maxLines="1"

            android:singleLine="true"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/smalltextsize" />


        <TextView
            android:id="@+id/txt_condetails_contact_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:background="@drawable/box_border_shape"
            android:ellipsize="end"
            android:text="keerthi@gmail.com"
            android:inputType="textEmailAddress"
            android:maxLines="1"

            android:singleLine="true"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/smalltextsize" />

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorLightGray"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:weightSum="2"
        android:padding="8dp"
        android:background="@color/colorWhite">


        <TextView
            android:id="@+id/tv_condetails_contact_gst"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:background="@drawable/box_border_shape"
            android:ellipsize="end"
            android:text="@string/gst_num"
            android:maxLines="1"

            android:singleLine="true"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/smalltextsize" />


        <TextView
            android:id="@+id/txt_condetails_contact_gst"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:background="@drawable/box_border_shape"
            android:ellipsize="end"
            android:text="89BSY56"
            android:maxLines="1"

            android:singleLine="true"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/smalltextsize" />


    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorLightGray"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:weightSum="2"
        android:padding="8dp"
        android:background="@color/colorWhite">


        <TextView
            android:id="@+id/tv_condetails_contact_map"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:background="@drawable/box_border_shape"
            android:ellipsize="end"
            android:text="@string/map"
            android:maxLines="1"

            android:singleLine="true"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/smalltextsize" />


        <TextView
            android:id="@+id/txt_condetails_contact_map"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:background="@drawable/box_border_shape"
            android:ellipsize="end"
            android:maxLines="1"

            android:singleLine="true"
            android:text="@string/no_map"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/smalltextsize" />

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorLightGray"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:weightSum="2"

        android:padding="8dp"
        android:background="@color/colorWhite">


        <TextView
            android:id="@+id/tv_condetails_contact_Address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:background="@drawable/box_border_shape"
            android:ellipsize="end"
            android:text="@string/addre"
            android:maxLines="1"

            android:singleLine="true"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/smalltextsize" />


        <TextView
            android:id="@+id/txt_condetails_contact_Address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:background="@drawable/box_border_shape"
            android:ellipsize="end"
            android:text="hyderabad"
            android:maxLines="1"

            android:singleLine="true"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/smalltextsize" />


    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorLightGray"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:weightSum="2"
        android:padding="8dp"
        android:background="@color/colorWhite">


        <TextView
            android:id="@+id/tv_condetails_contact_save"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:background="@drawable/box_border_shape"
            android:ellipsize="end"
            android:text="@string/goden_address"
            android:maxLines="1"

            android:singleLine="true"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/smalltextsize" />


        <TextView
            android:id="@+id/txt_condetails_contact_save"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:background="@drawable/box_border_shape"
            android:ellipsize="end"
            android:text="xyz"
            android:maxLines="1"

            android:singleLine="true"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/smalltextsize" />

    </LinearLayout>
</LinearLayout>
</LinearLayout>