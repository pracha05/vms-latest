<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:minHeight="?attr/actionBarSize"
        android:title="@string/about_app"
        app:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar" />
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_gravity="center|center_vertical|center_horizontal"
            android:background="@drawable/membership_gold"
            android:layout_margin="@dimen/space20"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_member"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/space20"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:textSize="16dp"
                android:text="@string/gold_membership"
                android:textColor="@color/golden_text"
                android:textStyle="bold">

            </TextView>

            <TextView
                android:id="@+id/tv_member_validity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_member"
                android:layout_marginTop="10dp"
                android:textSize="12dp"
                android:gravity="center"
                android:text="@string/gold_membership_validity"
                android:textColor="@color/colorWhite"
                android:textStyle="bold">

            </TextView>
        </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginBottom="@dimen/space10"
        android:layout_marginRight="@dimen/space5"
        android:layout_marginLeft="@dimen/space5"
        android:background="@color/cast_expanded_controller_ad_label_background_color" />

    <com.tmall.ultraviewpager.UltraViewPager
        android:id="@+id/ultra_viewpager"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@color/colorLightGray" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="@dimen/allbuttonheight"
        android:text="@string/buy_gold_membership"
        android:textColor="@color/colorWhite"
        android:textAllCaps="false"
        android:id="@+id/btn_save1"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="@dimen/space20"
        android:layout_marginRight="@dimen/space20"
        android:background="@drawable/button_round_cornor_selector"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_guidelines"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="18dp"
                android:gravity="left"
                android:layout_margin="@dimen/space20"
                android:text="Membership Guidelines:"
                android:textColor="@color/gray_shade_8"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/tv_guidelines_data"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="14dp"
                android:gravity="left"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="20dp"
                android:padding="10dp"
                android:text="@string/guide_lines"
                android:textColor="@color/gray_shade_8"
                android:background="@drawable/drwable_white"
                android:textStyle="normal"/>

        </LinearLayout>

    <TextView
        android:id="@+id/tv_faqs"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="18dp"
        android:gravity="left"
        android:layout_margin="@dimen/space20"
        android:text="@string/faq"
        android:textColor="@color/gray_shade_8"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/tv_faq1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="14dp"
        android:gravity="left"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="10dp"
        android:padding="10dp"
        android:text="What is Foliyoo membership ?"
        android:textColor="@color/gray_shade_8"
        android:background="@drawable/drwable_white"
        android:textStyle="normal"/>
        <TextView
            android:id="@+id/tv_faq2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="14dp"
            android:gravity="left"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="30dp"
            android:padding="10dp"
            android:text="How can I get Foliyoo membership plan?"
            android:textColor="@color/gray_shade_8"
            android:background="@drawable/drwable_white"
            android:textStyle="normal"/>

        <TextView
            android:id="@+id/tv_see_all"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="14dp"
            android:gravity="center"
            android:layout_marginTop="20dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="30dp"
            android:padding="10dp"
            android:text="See all"
            android:textColor="@color/red_shade"
            android:textStyle="normal"/>

        </LinearLayout>
    </ScrollView>
</LinearLayout>