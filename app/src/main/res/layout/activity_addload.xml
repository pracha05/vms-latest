<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    android:orientation="vertical"
    tools:context=".activity.AddLoadActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/colorPrimary">

        <ImageView
            android:id="@+id/img_addload_back"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:background="@mipmap/back" />

        <TextView
            android:id="@+id/tv_addload_header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="@string/add_load"
            android:textColor="@color/colorWhite"

            android:textSize="@dimen/headertextsize" />

    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:scrollbars="none"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:orientation="horizontal"
                    android:padding="2dp">

                        <RadioGroup
                            android:id="@+id/rg_load_type"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginLeft="12dp"
                            android:layout_marginRight="12dp"
                            android:gravity="center"
                            android:orientation="horizontal"
                            android:weightSum="3">

                            <RadioButton
                                android:id="@+id/rb_fulload"
                                android:layout_width="match_parent"
                                android:layout_height="35dp"
                                android:layout_marginRight="2.5dp"
                                android:layout_weight="1"
                                android:background="@drawable/radio1_background"
                                android:checked="true"
                                android:textSize="@dimen/verysmalltextsize"
                                android:text="@string/full_load"
                                android:buttonTint="@color/colorWhite"
                                android:textColor="@color/colorWhite" />

                            <RadioButton
                                android:id="@+id/rb_paetload"
                                android:layout_width="match_parent"
                                android:layout_height="35dp"
                                android:layout_marginLeft="2.5dp"
                                android:layout_marginRight="2.5dp"
                                android:layout_weight="1"
                                android:buttonTint="@color/colorWhite"
                                android:textSize="@dimen/verysmalltextsize"

                                android:background="@drawable/radio2_background"
                                android:text="@string/part_load"
                                android:textColor="@color/colorWhite" />

                            <RadioButton
                                android:id="@+id/rb_boxbooking"
                                android:layout_width="match_parent"
                                android:layout_height="35dp"

                                android:layout_marginLeft="2.5dp"
                                android:layout_weight="1"
                                android:background="@drawable/radio3_background"
                                android:buttonTint="@color/colorBlack"
                                android:textSize="@dimen/verysmalltextsize"

                                android:text="@string/box_booking"
                                android:textColor="@color/colorBlack" />

                 </RadioGroup>

         </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="12dp"
        android:gravity="center_vertical|left"
        android:orientation="horizontal"
        android:padding="2dp">

        <ImageView
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:layout_gravity="bottom"
            android:layout_margin="2dp"
            android:background="@drawable/ic_launcher_source" />

        <TextView
            android:id="@+id/tv_addload_sourcepoint"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/box_gray_border_shape"
            android:ellipsize="end"
            android:maxLines="1"

            android:padding="10dp"
            android:paddingLeft="6dp"
            android:singleLine="true"
            android:text="@string/pickup_point"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/mediumtextsize" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="4dp"

        android:orientation="vertical">

        <ImageView
            android:layout_width="10dp"
            android:layout_height="8dp"
            android:background="@drawable/ic_launcher_dots" />

        <ImageView
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:background="@drawable/ic_launcher_dots" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal"
        android:padding="2dp">

        <ImageView
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:layout_gravity="top"
            android:layout_margin="2dp"
            android:background="@drawable/ic_launcher_destination" />

        <TextView
            android:id="@+id/tv_addload_destpoint"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/box_gray_border_shape"
            android:ellipsize="end"
            android:maxLines="1"
            android:padding="10dp"
            android:paddingLeft="6dp"

            android:singleLine="true"
            android:text="@string/delivery_point"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/mediumtextsize" />


    </LinearLayout>

