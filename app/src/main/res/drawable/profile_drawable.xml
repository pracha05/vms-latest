<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:drawable="@color/red_shade"/>
    <item>
        <bitmap android:src="@drawable/ic_user_default"
            android:gravity="center" android:alpha="0.1"/>
    </item>

    <item android:top="300dp"
        android:bottom="-300dp"
        android:left="0dp"
        android:right="-300dp">
        <rotate
            android:fromDegrees="-10"
            android:pivotX="0%"
            android:pivotY="100%">
            <shape
                android:shape="rectangle">
                <solid
                    android:color="@color/colorOrange"/>
            </shape>
        </rotate>
    </item>
</layer-list>